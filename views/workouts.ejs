<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>We build You</title>
    <style>
        .workout-card {
            margin-bottom: 20px;
        }
        .split-card {
            margin-bottom: 20px;
        }
        .exercise-list li {
            transition: background-color 0.3s, color 0.3s;
        }
        .exercise-list li:hover {
            background-color: purple;
            color: white;
        }
    </style>
</head>
<body>
    <%- include('partials/navbar') %>
    <div class="container">
        <h1>Workouts</h1>
        <div class="row">
            <div class="col-md-12">
                <h2>Muscle Groups</h2>
                <% muscleGroups.forEach(group => { %>
                    <div class="card workout-card">
                        <div class="card-body">
                            <h5 class="card-title"><%= group.name %></h5>
                            <ul class="exercise-list">
                                <% group.exercises.forEach(exercise => { %>
                                    <li>
                                        <strong><%= exercise.name %></strong>: <%= exercise.sets %> sets of <%= exercise.reps %> reps
                                    </li>
                                <% }) %>
                            </ul>
                        </div>
                    </div>
                <% }) %>
            </div>
            <div class="col-md-12">
                <h2>Workout Splits</h2>
                <% workoutSplits.forEach(split => { %>
                    <div class="card split-card">
                        <div class="card-body">
                            <h5 class="card-title"><%= split.name %></h5>
                            <p class="card-text"><%= split.description %></p>
                            <form action="/chooseworkout" method="post">
                                <input type="hidden" name="workout" value="<%= split.name %>">
                                <button type="submit" class="btn btn-primary">Choose This Split</button>
                            </form>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</body>
</html>
